<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="dictionary-header">
      <img class="img-responsive" src="/img/typewriter-overhead.jpg" alt="an overhead view of an old typewriter"/>
      <h1>Provide a Definition for "<%= @word.name() %>":</h1>
    </div>
    <div class="dictionary-form">
      <form action='/definitions' method='post'>
        <input id='word_id' name='word_id' type='hidden' value='<%= @word.id() %>'>
        <div class="form-group">
          <label for="definition-one">Give me the definition:</label>
          <input type="text" name="definition-one" id="definition-one" class="form-control">
        </div>
        <button type="submit" class="btn btn-info">Add Definition</button>
      </form>
    </div>
  </div>
</div>
